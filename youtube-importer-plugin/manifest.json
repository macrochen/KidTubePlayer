{
  "manifest_version": 3,
  "name": "视频列表制作插件",
  "version": "1.1",
  "description": "在 YouTube 和 Bilibili 上轻松选择视频并导出为 JSON 列表。",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://*.bilibili.com/*"
  ],
  "action": {
    "default_title": "激活视频选择模式"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://*.bilibili.com/*"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
